<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/noteEt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter A Note"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toStartOf="@+id/saveNoteBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/saveNoteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Note"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#221616"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/displayNoteBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:backgroundTint="#7BA9CD"
        android:text="Display Note"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@+id/saveNoteEt"
        app:layout_constraintStart_toStartOf="@+id/noteEt"
        app:layout_constraintTop_toBottomOf="@+id/noteEt"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />

    <TextView
        android:id="@+id/noteTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/displayNoteBtn"
        app:layout_constraintStart_toStartOf="@+id/displayNoteBtn"
        app:layout_constraintTop_toBottomOf="@+id/displayNoteBtn" />


</androidx.constraintlayout.widget.ConstraintLayout>